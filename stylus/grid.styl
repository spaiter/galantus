@import 'nib'
@import 'vars.styl'

.row
  clearfix()
  width 100%
  box-sizing (border-box)
  float left
  display block

.col-1,
.col-2,
.col-3,
.col-4,
.col-5,
.col-6,
.col-7,
.col-8,
.col-9,
.col-10,
.col-11,
.col-12
  float left
  position relative
  min-height 1px
  border 0px solid rgba(0,0,0,0)
  box-sizing (border-box)
  background-clip (padding-box !important)

$columns = 12
$oneColumnWidth = 100%/$columns

for $i in 1..$columns
  .col-{$i}
    width ($i*$oneColumnWidth)

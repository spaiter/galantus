@import 'nib'
@import 'vars.styl'

body, html
  margin 0
  overflow hidden
  transition opacity 400ms

body, .onepage-wrapper, html
  display block
  position static
  padding 0
  width 100%
  height 100%

.onepage-wrapper
  width 100%
  height 100%
  display block
  position relative
  padding 0
  -webkit-transform-style preserve-3d
  .section
    width 100%
    height 100%

.onepage-pagination
  position absolute
  right 10px
  top 50%
  z-index 5
  list-style none
  margin 0
  padding 0
  li
    padding 0
    text-align center
    &:first-child
      a
        margin-top 0
    a
      padding-right: 20px
      width 4px
      height 4px
      display block
      margin-top 30px
      &:before
        content ''
        position absolute
        border-radius 16px
        width 16px
        height 16px
        background none
        border 1px solid $green
      &.active:before
        background $green

.disabled-onepage-scroll, .disabled-onepage-scroll .wrapper
  overflow auto

.disabled-onepage-scroll
  .onepage-wrapper
    transform none !important
    min-height 100%
    .section
      position relative !important
      top auto !important
  .onepage-pagination
    display none

body.disabled-onepage-scroll, .disabled-onepage-scroll .onepage-wrapper, html
  position inherit

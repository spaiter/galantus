@import 'nib'
@import 'vars.styl'

.frameTop
  .loader
    opacity 1
    background $green
    width 0
    height 50px
    &.loading
      width 100%
      transition width 1.35s linear 0.3s

.frameRight
  .loader
    opacity 1
    background $green
    width 50px
    height 0
    &.loading
      height 100%
      transition height 1.35s linear 1.65s

.frameBottom
  .loader
    opacity 1
    float right
    background $green
    width 0
    height 50px
    &.loading
      width 100%
      transition width 1.35s linear 3s

.frameLeft
  .loader
    opacity 1
    position absolute
    bottom 0
    background $green
    width 50px
    height 0
    &.loading
      height 100%
      transition height 1.35s linear 4.35s

@import 'nib'
@import 'vars.styl'

html,body
  overflow hidden
  position relative
  height 100%
  font-family 'Roboto', sans-serif;
  font-size 18px
  line-height 1.2

.container
  min-width 768px
  width 100%
  height 100%
  .section
    background $white

a
  color $green
  &:hover
    color $green

.logo
  text-align center
  padding-top 50px
  img
    position relative

h1
  font-size 48px
  color $white
  text-transform uppercase
  font-weight 100
  line-height 1
  margin-bottom 30px

.blockCenter
  margin 0 auto

.textCenter
  text-align center

.btn
  width 260px
  height 50px
  background $white
  color $green
  font-size 21px
  text-transform uppercase
  line-height 50px